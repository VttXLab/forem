
<a class="crayons-link crayons-link--contentful" style="color: unset !important;" href="<%= plucked_article[0] %>">
  <% if !plucked_article[5] %>
  <%= plucked_article[1] %>
  <% elsif plucked_article[4] != "" %>
  <p style="margin-bottom: var(--su-1);" class="text-truncate"><%= plucked_article[6] %></p>
  <img <%= plucked_article[7] ? 'class=nsfw-content' : '' %> src="<%= plucked_article[4].split(',')[0] %>" style="width: 100%" />
  <% else %>
  <p style="margin-bottom: var(--su-1);" class="text-truncate"><%= plucked_article[6] %></p>
  <% end %>
  <% if show_comment_count %>
    <div class="crayons-link__secondary">
      <% if plucked_article[2] > 0 %>
        <%= t("views.comments.count", count: plucked_article[2]) %>
      <% else %>
        <span class="c-indicator c-indicator--warning"><%= t("views.comments.empty") %></span>
      <% end %>
    </div>
  <% end %>
</a>
